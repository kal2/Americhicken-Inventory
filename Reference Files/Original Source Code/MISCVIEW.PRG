* ---OPEN FILES
MVIEWIT = .T.
DO WHILE MVIEWIT
   MTITLE =  ' - VIEW MISCELLANEOUS ADJUSTMENTS'
   SELECT B
   STORE SUP_REAS1 TO MSUP_REAS1
   STORE SUP_REAS2 TO MSUP_REAS2
   STORE CUS_REAS1 TO MCUS_REAS1
   STORE CUS_REAS2 TO MCUS_REAS2
   STORE SUP_AMT1 TO MSUP_AMT1
   STORE SUP_AMT2 TO MSUP_AMT2
   STORE CUS_AMT1 TO MCUS_AMT1
   STORE CUS_AMT2 TO MCUS_AMT2
   STORE WRITEOFF TO MWRITEOFF
   STORE CUS_PALL TO MCUS_PALL  
   STORE SUP_PALL TO MSUP_PALL    
   DO TEXTMISC
   SELECT F
   DO FOX_USE WITH "PRT_NOTE INDEX PRT_NOTE", .F.
   SEEK MSALESMAN + MPO_NBR + MPO_SUFFIX
   IF .NOT. EOF()
      STORE INV_COMMT TO MINV_COMMT
      STORE SUP_COMMT TO MSUP_COMMT
   ELSE
      STORE SPACE(60) TO MINV_COMMT, MSUP_COMMT
   ENDIF
   USE
   SELECT B
   DO SAYMISC
   STORE 1 TO MACTION
   @ 24,0 SAY 'Action: ' + STR(MACTION,1)
   @ 24,13 SAY '1. Continue    2. Previous Pg   3. View Finished   4. View History'
   @ 24,8 GET MACTION PICTURE '#' RANGE 1,4
   READ
   DO CASE
   CASE MACTION = 1
      MGOTO_PG = 4
      MVIEWIT = .F.
   CASE MACTION = 2
      MGOTO_PG = 2
      MVIEWIT = .F.
   CASE MACTION = 3
      MGOTO_PG = 99
      MVIEWIT = .F.
   CASE MACTION = 4
      DO MISCHIST
   ENDCASE
ENDDO
RETURN
