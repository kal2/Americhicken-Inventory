USE FRTTOINV
DELETE ALL
PACK

INDEX ON BUY_CODE + YEAR+MONTH TO FRTTOINV
*DO FOX_USE WITH "FRTTOINV INDEX FRTTOINV", .F.
USE FRTTOINV INDEX FRTTOINV

SELECT B
*DO FOX_USE WITH "DAILYJRN INDEX JRN_MO", .F.
USE DAILYJRN INDEX JRN_MO
SET FILTER TO TRAN_MO = '05' .AND. TRAN_YR = '2009'
GOTO TOP

DO WHILE .NOT. EOF()
   
   IF BBUYCODE <> 'INVN'
      SKIP
      LOOP
   ENDIF
   IF INV_COR <> 'I'
      SKIP
      LOOP
   ENDIF
   SELECT A
   SEEK B->BUY_CODE+B->TRAN_YR+B->TRAN_MO
   IF EOF()
      APPEND BLANK
      REPLACE YEAR WITH B->TRAN_YR
      REPLACE MONTH WITH B->TRAN_MO
      REPLACE BUY_CODE WITH B->BUY_CODE
   ENDIF
   
   REPLACE FRT_AMT WITH FRT_AMT + B->FRT_AMT1 + B->FRT_AMT2 +B->FRT_AMT2
   REPLACE FRT_LBS WITH FRT_LBS + B->TOT_LBS
   SELECT B
   SKIP
ENDDO

SELECT B
USE
USE \AMERI\BUYER INDEX \AMERI\BUY_CODE

SELECT A
GOTO TOP

DO WHILE .NOT. EOF()
   SELECT B
   SEEK A->BUY_CODE
   SELECT A
   REPLACE FREEZER WITH B->NAME
   SKIP
ENDDO


